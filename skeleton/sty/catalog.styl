#main
  .product
    padding-top 50px
    .product-vendor, .product-title
      text-transform uppercase
      padding-bottom 10px
    .product-title
      letter-spacing 3px
    .product-price
      display block
      font: f.h8
      letter-spacing 2px
      margin 0
      margin-bottom 40px
    .hr
      clear both
      margin-top 50px
      margin-bottom 50px
      height 1px
      border-top 1px solid
      border-color: c.grey1
      width 100%
    #product-description
      text-align left
    label
      width 30%
      padding-top 9px
      padding-bottom 9px
      display inline-block
      border-right 1px solid white
      text-transform uppercase
    #product-variants
      margin-top 30px
    .selector-wrapper
      height 45px
      color: c.grey2
      background-color: c.tan1
    select
      color: c.grey2
      height 35px
      width 70%
      text-transform uppercase
      background-color transparent
      text-align center
    #product-add
      > input
        border 0
        border-radius 0
        width 100%
        background-color: c.grey1
        color: c.grey2
  .padding
    height 50px
  .side-nav
    color: c.grey2
    float left
    width 25%
    h8
      padding-bottom 10px
    li
      font: f.copy9
      margin-bottom 10px
      > a
        color: c.grey2
      > a.active
        color: c.grey1
  .left-col
    width 75%
    float left
    text-align center
    .recommends
      width 100%
    .other-products
      padding-bottom 20px
      
@media all and (min-width: 1px) and (max-width: 1000px)
  #main > .side-nav
    float none
    width auto
    padding 0 20px
  #main > .left-col
    width 100%
    float none
    padding 0 20px
  .prod-image-wrap > a > img
    width 100%
     

