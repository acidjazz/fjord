.carousel
  width 100%
  height 400px
  position relative
  
  > .carousel-copy
    width 75%
    text-align center 
    color: c.white1
    left 50%
    top 50%
    -webkit-transform translate(-50%, -50%)
    -moz-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    position absolute
    z-index 9999
    
  > .slides
    > .slide
      position absolute
      width 100%
      height 100%
      background-size cover
      background-position 50% 10%
      &.on
        opacity 1
        transition opacity 0.2s linear 0.1s
      &.off
        opacity 0
        transition opacity 0.2s linear 0s
      &.slide1
        background-image url(./carousel_1.jpg)
      &.slide2
        background-image url(./carousel_2.jpg)
      &.slide3
        background-image url(./carousel_3.jpg)


  > .nav
    > .arrow
      position absolute
      width 50px
      height 50px
      border-top 1px solid white
      border-left 1px solid white
      top 50%
      margin-top -25px
      cursor pointer
      transition all 0.2s linear 
      &:hover
        border-top 2px solid white
        border-left 2px solid white
      &.left
        left 25px
        transform rotate(-45deg)
        &:hover
          left 20px
      &.right
        right 25px
        transform rotate(135deg)
        &:hover
          right 20px
    > .dots
      text-align center
      position absolute
      bottom 0px
      width 100%
      > .dot
        cursor pointer
        width 20px
        height 20px
        border-radius 50%
        margin 5px 10px
        display inline-block
        transition background-color 0.1s linear
        &:hover
          background-color: c.grey1
        &.on
          background-color: c.grey2
        &.off
          background-color: c.white1
