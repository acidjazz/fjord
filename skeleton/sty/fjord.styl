
vendor-prefixes ?= webkit moz o ms official

@import vendor
@import mixins
@import fonts
@import guide

body
  font: f.copy1
  background-color: c.white1
  padding 0
  margin 0

.container
  padding 0px

.fj-header-logo 
  display block
  width 400px
  height 49px
  margin 10px auto 10px auto
  svg > g > path
    fill: c.grey2
    
.site-header__desc 
  font: f.h2
  padding 10px 0
  color: c.grey2
  letter-spacing 1px

.search-form
  border: 1px solid c.grey2
  > input
    border none
    padding 7px 0 8px 0
    font: f.copy1
    text-transform uppercase
  > label
    float right
    > #search-submit
      display none
    > .search-form-submit
      float right
      width 35px
      height 35px
      padding 5px
      > svg path
        fill: c.grey2

header.row 
  > .fj-topnav, > .fj-cart
    background-color: c.grey1
    padding-bottom 0px
    > .cart-link, > .customer-links
      display inline-block
      text-transform uppercase
      color: c.grey2
      font: f.copy2
      padding 11.5px
    > nav
      padding-right 0px
      padding-left 16px
      > ul
        > li
          padding 10px
          &.active
            background-color: c.white1
        > li > a
          text-transform uppercase
          color: c.grey2
          font: f.copy2

@import carousel

.designer-page
  > header
    position relative
    width 100vw
    left calc(-50vw + 50%)
    height 400px
    text-align center
    text-transform uppercase
    color: c.white1
    background-image url(./designer_banner.jpg)
    background-size cover
    background-repeat no-repeat
    > .titles
      height 198px
      margin 101px 0 0 0
      > .titleA
        font: f.h3
        letter-spacing 2px
      > .titleB
        font: f.h4
      > .titleC
        font: f.h5

@import designer
