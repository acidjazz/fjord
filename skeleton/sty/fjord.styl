
vendor-prefixes ?= webkit moz o ms official

@import vendor
@import mixins
@import fonts
@import guide

body
  font: f.copy1
  background-color: c.white1
  padding 0
  margin 0

.container
  padding 0px

.fj-header-logo 
  display block
  width 400px
  height 49px
  margin 10px auto 10px auto
  svg > g > path
    fill: c.grey2
    
.site-header__desc 
  font: f.h2
  padding 10px 0
  color: c.grey2
  letter-spacing 1px

.search-form
  border: 1px solid c.grey2
  > input
    border none
    padding 7px 0 8px 0
    font: f.copy1
    text-transform uppercase
  > label
    float right
    > #search-submit
      display none
    > .search-form-submit
      float right
      width 35px
      height 35px
      padding 5px
      > svg path
        fill: c.grey2

header.row 
  > .fj-topnav, > .fj-cart
    background-color: c.grey1
    padding-bottom 0px
    > .cart-link, > .customer-links
      display inline-block
      text-transform uppercase
      color: c.grey2
      font: f.copy2
      padding 11.5px
    > nav
      padding-right 0px
      padding-left 16px
      > ul
        > li
          padding 10px
          &.active
            background-color: c.white1
        > li > a
          text-transform uppercase
          color: c.grey2
          font: f.copy2

.carousel
  width 100%
  height 400px
  background-color pink
  position relative
  > .slides
    > .slide
      position absolute
      width 100%
      height 100%
      background-color blue
      background-size cover
      background-position 50% 10%
      &.on
        display block
      &.off
        display none
      &.slide1
        background-image url(./carousel_1.jpg)
      &.slide2
        background-image url(./carousel_2.jpg)
      &.slide3
        background-image url(./carousel_3.jpg)


  > .nav
    > .arrow
      position absolute
      width 50px
      height 50px
      border-top 1px solid white
      border-left 1px solid white
      top 50%
      margin-top -25px
      cursor pointer
      transition all 0.2s linear 
      &:hover
        border-top 2px solid white
        border-left 2px solid white
      &.left
        left 25px
        transform rotate(-45deg)
        &:hover
          left 20px
      &.right
        right 25px
        transform rotate(135deg)
        &:hover
          right 20px
    > .dots
      text-align center
      position absolute
      bottom 0px
      width 100%
      > .dot
        cursor pointer
        width 20px
        height 20px
        border-radius 50%
        margin 5px 10px
        display inline-block
        transition background-color 0.1s linear
        &:hover
          background-color: c.grey1
        &.on
          background-color: c.grey2
        &.off
          background-color: c.white1


