body.template-collection
  > .container
    > #main
      > #products_header
        text-align center
        font: f.h3
        margin-bottom 20px
      > #header
        background-size cover
        height 350px
        text-align center
        color: c.white1
        > .header_copy
          position relative
          top 50%
          transform translateY(-50%)
      h2
        font: f.h3
      h1
        font: f.h4
        text-transform uppercase
      > .rte
        > p
          display none 
        > table
          width 50%
          float left
          > tbody
            > tr
              border 0
              > td
                color: c.grey2
                vertical-align top
                strong
                  font: f.copy6

