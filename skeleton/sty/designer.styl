body.template-collection
  > .container
    > #main
      > #products_header
        text-align center
        font: f.h3
        margin-bottom 20px
      > #header
        margin-bottom 50px
        background-size cover
        height 350px
        text-align center
        color: c.white1
        > .header_copy
          position relative
          top 50%
          transform translateY(-50%)
      .collection-desc-header > h1
        text-align center
        font-size 62px
      .collection-desc-header > h2
        text-align center
        font: f.h14
        font-size 20px
      h4, h1
        text-transform uppercase
      > .rte
        > p
          display none 
        > table
          width 50%
          float left
          > tbody
            > tr
              border 0
              > td
                color: c.grey2
                vertical-align top
                strong
                  font: f.copy6
      .recommendations
        text-align center
table > p
  &:first-child
    border 1px solid red 

.parallax-container
  width 100%
  position relative
  overflow hidden
  height 400px
.parallax
  left 0
  top 0
  position absolute
  white-space nowrap
  > li
    display inline-block
    > div
      border 1px solid
      background-size cover
      width 300px
      height 300px
      