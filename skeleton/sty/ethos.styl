.ethos
  #header_1
    background-image url('https://cdn.shopify.com/s/files/1/1087/6326/files/Fjordlife_LandingPage_Image.jpg?443988946288892372')
  #header_2
    background-image url('https://cdn.shopify.com/s/files/1/1087/6326/files/fjord-waterfall.png?14821091821338818993')
  > .ethos_header
    background-size cover
    background-position center
    background-repeat no-repeat
    width 100%
    height 400px
    position relative 
    > .header_copy
      width 75%
      text-align center 
      color: c.white1
      left 50%
      top 50%
      -webkit-transform translate(-50%, -50%)
      -moz-transform translate(-50%, -50%)
      transform translate(-50%, -50%) 
      position absolute
      z-index 9999
  #header_2 > .header_copy
    width 90%
  .ethos_statement
    padding-top 50px
    padding-bottom 50px
    width 85%
    margin auto
    text-align center
    > .author
      padding-top 20px
      font: f.h11
  .ethos_block
    width 95%
    margin auto
    padding-bottom 50px
    -webkit-columns 2 360px
    -moz-columns 2 360px 
    columns 2 360px
    -webkit-column-gap 4em
    -moz-column-gap 4em
    column-gap 4em
    > div
      vertical-align top
      display inline-block
      margin-left 15px
      margin-right 15px
    > .block_image
      background-size cover
      background-repeat no-repeat
      width 100%
    > #ethos_image
      background-position 0px -60px
      background-image url('https://cdn.shopify.com/s/files/1/1087/6326/files/slide-2.jpg?9355096147740056682')
      height 250px
    > #brand_image
      background-image url('https://cdn.shopify.com/s/files/1/1087/6326/files/slide-5.jpg?9355096147740056682')
      height 350px
  .ethos_cols
    padding-top 50px
    width 100%
    display flex
    justify-content space-between
    > div
      vertical-align top
      width 30%
      display inline-block
  .ethos_stand_for
    padding-top 50px
    width 80%
    text-align center
    margin auto
    > button
      border-radius 0
      background-color: c.grey1
      color: c.grey2
      margin 30px 0
      border 0
      padding 15px 30px
    