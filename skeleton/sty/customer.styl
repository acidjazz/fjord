    color: c.white1
.customer_body
  padding 5px
          
#cart
  h2, h8
    text-transform uppercase
  .additional-checkout-buttons
    margin-top 30px
  .subtotal
    padding-bottom 30px
  h3 > a
    color: c.grey2
    text-decoration underline
  .col1
    width 55%
  .col2
    width 45%
    
