#customer
  a 
    text-decoration underline
  > .inner
    text-align left
    width 400px
    margin auto
    padding 15px
    position relative
  > .login-block
    display inline-block
    vertical-align top
  .errors
    text-align left
    > ul
      margin 0
  #cont-guest
    height 400px
    border-left: 1px solid c.grey2
    padding-left 50px
  h2
    text-transform uppercase
    padding-top 25px
    padding-bottom 15px
  input
    margin-bottom 15px
  hr
    margin-bottom 40px
  #page-subscribe-form
    padding-top 20px
  .subscribe_desc
    padding-top 10px
    padding-bottom 20px
  .subscribe_img
    padding-bottom 20px
  input[type="submit"]
    background-color: c.grey1
    color: c.grey2
    padding 10px 20px
    border-radius 0
    border 0
  .account_details
    float left
    width 25%
    margin-right 50px
  .account_orders
    width: 70%
    float right
    
.template-customers-order
  hr
    margin-bottom 40px
  a 
    text-decoration underline
  h2
    text-transform uppercase
    padding-top 25px
    margin-bottom 15px
  b
    font: f.copy11
  .order_address
    float left
    width 25%
    margin-right 50px
  .order_details
    float right
    width 70%

.customer_header
  background-color: c.grey2
  padding 5px 
  margin-bottom 15px
