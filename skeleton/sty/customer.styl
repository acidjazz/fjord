#customer
  text-align center
  > .inner
    text-align left
    width 400px
    margin auto
    padding 15px
  > .login-block
    display inline-block
    vertical-align top
  .errors
    text-align left
    > ul
      margin 0
  #cont-guest
    height 400px
    border-left: 1px solid c.grey2
    padding-left 50px
  h2
    text-transform uppercase
    padding-top 25px
    padding-bottom 15px
  input
    margin-bottom 15px
  hr
    margin-bottom 40px
  #page-subscribe-form
    padding-top 20px
  .subscribe_desc
    padding-top 10px
    padding-bottom 20px
  .subscribe_img
    padding-bottom 20px
  input[type="submit"]
    background-color: c.grey1
    color: c.grey2
    padding 10px 20px
    border-radius 0
    border 0
#cart
  h2, h8
    text-transform uppercase
  .additional-checkout-buttons
    margin-top 30px
  .subtotal
    padding-bottom 30px
  a
    color: c.grey2
    
#customer.subscribe
  .inner 
    width 600px
  #CustomerSubscribeForm
    text-align center
    width 100%
    
  input
    width 50%
    height 50px
    float left
    border-radius 0
