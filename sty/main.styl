
vendor-prefixes ?= webkit moz o ms official

@import vendor
@import mixins
@import fonts
@import guide

body
  font: f.copy1
  padding 0
  margin 0

.main
  background-image url(/img/background.jpg)
  background-size cover
  background-repeat no-repeat
  background-position center center
  width 100%
  height 100vh
  position relative
  > .inner
    height = 490
    position absolute
    width 100%
    height  unit(height, px)
    top 50%
    margin-top unit(-(height/2), px)
    text-align center
    color: c.white1
    > .title
      font: f.h1
      text-transform uppercase
      padding 0 0 30px 0
      color: rgba(c.white1, 0.65)
      letter-spacing 5px
    > .logo
      margin auto
      width 1000px
      height 110px
      > svg > g > path
        fill: rgba(c.white1, 0.5)

    > .copy1
      font: f.h2
      padding 30px 0 0 0
      letter-spacing 2px

    > .copy2
      font: f.copy3
      padding 30px 0 0 0
      letter-spacing 1px

    > form
      padding 30px 0 0 0
      color: c.grey1
      > input
        background-color: rgba(c.white1, 0.85)
        font: f.copy1
        padding 15px 15px 10px 15px
        border none
        color: c.grey1
        &.submit
          font: f.copy2
          padding 11px 15px 13px 15px
          color: c.grey1
          margin 0 0 0 10px
    > .social
      display block
      padding 30px 0 0 0
      text-align center
      width 225px
      margin auto
      > .icon
        float left
        width 40px
        height 40px
        > svg
          width auto
          height auto
          > g > path
            fill: rgba(c.white1, 0.85)
      > .handle
        float left
        display inline-block
        font: f.copy4
        color: rgba(c.white1, 0.85)
        padding 5px 0 0 10px

::-webkit-input-placeholder 
  color: c.grey1

.clear
  clearfix()
  font: f.copy1
