
vendor-prefixes ?= webkit moz o ms official

@import vendor
@import mixins
@import fonts
@import guide

body
  font: f.copy1
  padding 0
  margin 0

.main
  background-image url(/img/background.png)
  background-size cover
  background-repeat no-repeat
  background-position center center
  width 100%
  height 100vh
  position relative
  > .inner
    height = 320
    position absolute
    width 100%
    height  unit(height, px)
    top 50%
    margin-top unit(-(height/2), px)
    text-align center
    color: c.white1
    > .title
      font: f.h1
      text-transform uppercase
      padding 0 0 30px 0
    > .logo
      margin auto
      width 600px
      height 70px
      > svg > g > path
        fill: c.white1

    > .copy1
      font: f.h2
      padding 30px 0 0 0
    > .copy2
      font: f.copy3
      padding 30px 0 0 0

    > form
      padding 30px 0 0 0
      > input
        background-color: c.white1
        font: f.copy1
        padding 15px 15px 10px 15px
        border none
        &.submit
          font: f.copy2
          padding 11px 15px 13px 15px


